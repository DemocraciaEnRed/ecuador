font-primary = 'Open Sans', sans-serif
font-secondary = 'Lato', sans-serif

#demos-homepage
  padding-bottom 22px

  .section-hero-intro
    min-height 400px
    display block
    background url('demos-homepage/bkg_intro.jpg') center center no-repeat
    margin-bottom 12px

  .block-card-projecto
    border 1px solid #979797
    border-radius 3px
    height 480px
    max-width 360px
    width 100%
    overflow hidden
    background #FAFAFA
    margin-top 10px
    .img-projecto
      overflow hidden
      height 180px
      position relative
      padding 0
      margin 0
      
    .block-card-info
      padding 5px 20px 10px
      height 250px
      overflow hidden
      time, .keyword
        font-family font-secondary
        font-size 10px
        color #808080
        letter-spacing 2px
        line-height 11px
      .keywords
        margin-top 6px
        .keyword
          text-transform uppercase
      h3
        font-family font-secondary
        color black
        margin 10px 0
      .block-card-user
        .link-user
          width 40px
          display inline-block
          vertical-align top
          .img-user
            width 40px
            height 40px
            background #D8D8D8
            border 1px solid #979797
            overflow hidden
            border-radius 50%
            padding 0
            margin 0
            img
              width 100%

        .info-user
          display inline-block
          vertical-align top
          padding 0 0 0 10px
          p
            margin 0 0 2px
            &.ciudadanos
              font-size 12px
          
    .btn-action
      background #3B4D69
      font-family font-secondary
      font-size 18px
      font-weight 600
      color #FFFFFF
      line-height 18px
      border-radius 0
      padding 0
      height 48px
      line-height 48px
      display block
      text-transform uppercase
      
    &.projecto-cerrado
      .img-projecto:before
        content 'Cerrado'
        font-size 24px
        font-family font-secondary
        font-weight 400
        line-height 180px
        text-align center
        text-transform uppercase
        position absolute
        color #fff
        top 0
        left 0
        bottom 0
        right 0
        display block
        background-image -webkit-linear-gradient(rgba(250,75,114,0.70) 0%, rgba(243,37,62,0.70) 100%)
        background-image -o-linear-gradient(rgba(250,75,114,0.70) 0%, rgba(243,37,62,0.70) 100%)
        background-image linear-gradient(rgba(250,75,114,0.70) 0%, rgba(243,37,62,0.70) 100%)

  footer
    display block
    text-align center
    margin 12px auto
    padding-top 22px

    img
      max-width 200px

    .tos
      margin-top 5px

