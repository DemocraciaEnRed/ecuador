@import "icons"

font-primary = 'Open Sans', sans-serif
font-secundary = 'Lato', sans-serif

#demos-homepage
  font-family font-primary
  padding-bottom 22px

  .section-hero-intro
    min-height 400px
    display block
    padding 100px 0 0
    color #fff
    p
      max-width 580px
      margin-left auto
      margin-right auto

  .block-espacio-projecto
    padding 40px 0
    display block
    .block-card-projecto
      border 1px solid #979797
      border-radius 3px
      height 190px
      max-width 360px
      width 100%
      overflow hidden
      position relative
      margin-bottom 30px
      &:hover
        box-shadow inset 0 0 100px 100px rgba(255, 255, 255, 0.1)
      &:before
        content ""
        background-image url('demos-homepage/bkg-projecto-joven-card.svg')
        background-repeat no-repeat
        background-position center center
        opacity 0.2
        top 0
        left 0
        bottom 0
        right 0
        position absolute
        z-index 1 
      
      .block-card-info
        padding 40px 20px 10px
        color #fff
        h3
          font-family font-secundary
          margin-top 10px
          height 70px
          position relative
          z-index 10
          font-size 24px
          a
            color white
        p
          font-size 14px
      .hexagon
        position absolute
        z-index 10
        right 20px
        top 20px
        width 40px
        height 23.09px
        background-color #fff
        margin 11.55px 0
        
        [class^="icon-"], [class*=" icon-"]
          position absolute
          font-size 30px
          color #000
          z-index 10
          left 50%
          top 50%
          -ms-transform translate(-50%,-50%) /* IE 9 */
          -webkit-transform translate(-50%,-50%) /* Safari */
          transform translate(-50%,-50%)

        &:before,
        &:after
          content ""
          position absolute
          width 0
          border-left 20px solid transparent
          border-right 20px solid transparent
        &:before
          bottom 100%
          border-bottom 11.55px solid #fff
        &:after
          top 100%
          width 0
          border-top 11.55px solid #fff

  footer
    display block
    text-align center
    margin 12px auto
    padding-top 22px

    img
      max-width 200px

    .tos
      margin-top 5px